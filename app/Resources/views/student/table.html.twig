<div class="panel panel-default">
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Contact(s)</th>
                        <th>Age</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                {% for student in students %}
                    <tr class="odd gradeX">
                        <td><a href="{{ path('student_profile', { studentId: student.id } ) }}">{{ student.fName }} {{ student.lName }}</a> [{{ student.gender|first|capitalize }}]</td>
                        <td>{{ student.classs }}</td>
                        <td>{{ student.contact }}</td>
                        <td class="center">{{ student.age }}</td>
                        <td class="center">
                            <a class="btn btn-primary" href="{{ path('edit_student', { 'studentId': student.id } ) }}">Edit</a>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ student.id }}">Delete</button>
                            <a href="{{ path('student_profile', { studentId: student.id } ) }}" class="btn btn-info">View Progress</a>
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal{{ student.id }}" role="dialog">
                        <div class="modal-dialog modal-sm">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title">Are you sure?</h4>
                            </div>
                            <div class="modal-body">
                              <p>Are you sure you want to delete {{ student.fName }} {{ student.lName }}.</p>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              <a href="{{ path('delete_student', { 'studentId': student.id } ) }}" class="btn btn-danger">Go Ahead</a>
                            </div>
                          </div>
                        </div>
                    </div>

                {% endfor %}
                </tbody>
            </table>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  