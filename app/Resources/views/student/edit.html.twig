{% extends 'base.html.twig' %}
{% block pagewrapper %}
    {% set action_title = "Edit Student" %}
    {% embed "templates/pagewrapper.html.twig" %}
        {% block toplinks %}
        {% endblock %}
        {% block charts %}
        {% endblock %}
            {% block otherstuff_lg12 %}


            {{ form_start(form, {'method': 'post', 'attr': {'class': '' }} ) }}
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                    {% if not form.vars.valid %}
                      <div class="alert alert-warning">
                      {{ form_errors(form) }}
                      </div>        
                    {% endif %}
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>First Name</label>
                                      {{ form_widget(form.f_name, {'attr': {'class': 'form-control', 'placeholder': 'First name', 'id': 'first_name' }} ) }}
                                    </div>
                                    <div class="form-group">
                                    <label>Second Name</label>
                                      {{ form_widget(form.l_name, {'attr': {'class': 'form-control', 'placeholder': 'Last name', 'id': 'second_name' }} ) }}
                                    </div>
                                    <div class="form-group">
                                    <label>Class</label>
                                      {{ form_widget(form.classs, {'attr': {'class': 'form-control', 'placeholder': 'Last name', 'id': 'second_name' }} ) }}
                                    </div>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
          {#                         <form role="form">
       #}                           <div class="form-group">
                                    <label>Parent's Contact</label>
                                      {{ form_widget(form.contact, {'attr': {'class': 'form-control', 'placeholder': 'Parent\'s contact', 'id': 'contact' }} ) }}
                                    </div>
                                    <div class="form-group">
                                    <label>Student's Age</label>
                                      {{ form_widget(form.age, {'attr': {'class': 'form-control', 'placeholder': 'Age', 'id': 'age' }} ) }}
                                    </div>
                                    <div class="form-group">
                                    <label>Gender</label><br />
                                      {{ form_widget(form.gender, {'attr': {'class': 'form-control', 'id': 'gender' }} ) }}
                                    </div>
                               </div>
                              {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary' }} ) }}
                              {{ form_widget(form.saveAndAdd, {'attr': {'class': 'btn btn-info' }} ) }}                               
                                <!-- /.col-lg-6 (nested) -->
              `             {{ form_end(form) }}
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            </div>

        {% endblock %}
    {% endembed %}
{% endblock %}