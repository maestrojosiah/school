{% extends 'base.html.twig' %}
{% block pagewrapper %}
    {% set action_title = "Add Subject" %}
    {% embed "templates/pagewrapper.html.twig" %}
        {% block toplinks %}
        {% endblock %}
        {% block charts %}
        {% endblock %}
        {% block otherstuff_lg8 %}

		{{ form_start(form, {'method': 'post', 'attr': {'class': 'form-horizontal' }} ) }}
				{% if not form.vars.valid %}
	              <div class="alert alert-warning">
	              {{ form_errors(form) }}
	              </div>				
          		{% endif %}
			  <div class="form-group">
			    <label for="subject_title" class="col-sm-2 control-label">Subject Title</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.subject_title, {'attr': {'class': 'form-control', 'placeholder': 'Subject Title', 'id': 'subject_title' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="subject_code" class="col-sm-2 control-label">Subject Code</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.subject_code, {'attr': {'class': 'form-control', 'placeholder': 'Subject Code', 'id': 'subject_code' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-10">
		    		{{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
		    		{{ form_row(form.saveAndAdd, {'attr': {'class': 'btn btn-info'}}) }}
			    </div>
			  </div>
		{{ form_end(form) }}

		{% endblock %}
	{% endembed %}
{% endblock %}