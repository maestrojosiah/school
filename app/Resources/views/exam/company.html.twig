{% extends 'base.html.twig' %}

{% block pagewrapper %}
    {% set action_title = "Choose Exam Company" %}
    {% embed "templates/pagewrapper.html.twig" %}
        {% block toplinks %}
        {% endblock %}
        {% block charts %}
        {% endblock %}
        {% block otherstuff_lg12 %}
		    <div class="panel panel-default">
		        <div class="panel-heading">
		            Choose Exam Company
		        </div>

		        <div class="panel-body">
		            <div class="table-responsive">
	                <div class="list-group">
	                	{% for exam in exams %}
	                  		<a href="{{ path('add_exam_page', {'classId': exam.classs.id, 'examCompanyId': exam.examCompany.id, 'term': exam.term }) }}" class="list-group-item list-group-item-action">{{ exam.examCompany.companyName }} [Term {{ exam.term }}] </a>
	                	{% endfor %}
	                </div>
		            </div>
		        </div>

		    </div>

        {% endblock %}

    {% endembed %}

	<div class="modal fade" id="examModal" tabindex="-1" role="dialog" aria-labelledby="examModalLabel" aria-hidden="true" style="display: none;">
	    <div class="modal-dialog">
	        <div class="modal-content">
	            <div class="modal-header">
	                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	                <h4 class="modal-title" id="examModalLabel">Choose Exam Company</h4>
	            </div>
	            <div class="modal-body text-center">
	                <div class="list-group">
	                	{% for exam in exams %}
	                  		<a href="{{ path('add_exam_page', {'classId': exam.classs.id, 'examCompanyId': exam.examCompany.id, 'term': exam.term }) }}" class="list-group-item list-group-item-action">{{ exam.examCompany.companyName }} [Term {{ exam.term }}] </a>
	                	{% endfor %}
	                  		<a href="{{ path('add_exam_page', {'classId': class.id, 'examCompanyId': 'new', 'term': 'none' }) }}" class="list-group-item list-group-item-action">None Of The Above </a>
	                </div>
	            </div>
	            <div class="modal-footer">
	                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	            </div>
	        </div>
	        <!-- /.modal-content -->
	    </div>
	    <!-- /.modal-dialog -->
	</div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		$(window).on('load',function(){
	        $('#examModal').modal('show');
	    });
	</script>
{% endblock %}