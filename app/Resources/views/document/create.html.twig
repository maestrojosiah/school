{% extends 'base.html.twig' %}
{% block pagewrapper %}
    {% set action_title = "Upload Document" %}
    {% embed "templates/pagewrapper.html.twig" %}
        {% block toplinks %}
        {% endblock %}
        {% block charts %}
        {% endblock %}
        {% block otherstuff_lg8 %}

		{{ form_start(form, {'method': 'post', 'attr': {'class': 'form-horizontal' }} ) }}
	              <div class="alert alert-warning" id="alert" style="display:none;">
	              </div>
				{% if not form.vars.valid %}
	              <div class="alert alert-warning">
	              {{ form_errors(form) }}
	              </div>				
          		{% endif %}
			  <div class="form-group">
			    <label for="subject_title" class="col-sm-4 control-label">File</label>
			    <div class="col-sm-8">
		    		{{ form_row(form.file) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="subject_title" class="col-sm-4 control-label">File Name</label>
			    <div class="col-sm-8">
		    		{{ form_row(form.filename, {'attr': {'class': 'form-control', 'placeholder': 'File Name' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="subject_title" class="col-sm-4 control-label">Description</label>
			    <div class="col-sm-8">
		    		{{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Write Something about the Document' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="out_of_2" id="out_of_2_label" class="col-sm-4 control-label"></label>
			    <div class="col-sm-8">
		    		{{ form_row(form.save, {'attr': {'class': 'form-control btn btn-primary' }}) }}
			    </div>
			  </div>
		{{ form_end(form) }}

		{% endblock %}
        {% block otherstuff_lg4 %}
        	<a href="{{ path('list_documents') }}">Uploaded Documents</a>
        {% endblock %}
	{% endembed %}
{% endblock %}