<div class="modal fade" id="examModal" tabindex="-1" role="dialog" aria-labelledby="examModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="examModalLabel">Manage Exams</h4>
            </div>
            <div class="modal-body text-center">
                <div class="list-group">
                  <a href="{{ path('choose_class_for_exam') }}" class="list-group-item list-group-item-action">Record Exam Marks</a>
