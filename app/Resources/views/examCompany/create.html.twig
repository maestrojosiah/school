{% extends 'base.html.twig' %}
{% block pagewrapper %}
    {% set action_title = "Add Exam Company" %}
    {% embed "templates/pagewrapper.html.twig" %}
        {% block toplinks %}
        {% endblock %}
        {% block charts %}
        {% endblock %}
        {% block otherstuff_lg8 %}

		{{ form_start(form, {'method': 'post', 'attr': {'class': 'form-horizontal' }} ) }}
				{% if not form.vars.valid %}
	              <div class="alert alert-warning">
	              {{ form_errors(form) }}
	              </div>				
          		{% endif %}
			  <div class="form-group">
			    <label for="company_name" class="col-sm-2 control-label">Exam Company Title</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.company_name, {'attr': {'class': 'form-control', 'placeholder': 'Company Name', 'id': 'company_name' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-10">
		    		{{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}<br />
		    		{{ form_row(form.saveAndAdd, {'attr': {'class': 'btn btn-info'}}) }}
			    </div>
			  </div>
		{{ form_end(form) }}

		{% endblock %}
	{% endembed %}
{% endblock %}